@model List<Price>


<div class="container-fluid">

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 mt-2 text-gray-800">Prices</h1>
    <a asp-action="create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        Create
    </a>
</div>


    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Hoverable Table</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Fee</th>
                    <th scope="col">Advanced</th>
                    <th scope="col">Featured</th>
                <th scope="col">Action</th>


                </tr>
            </thead>
            <tbody>
                @foreach (Price item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>$@item.Fee </td>
                        <td>@item.IsAdvanced</td>
                    <td>@item.IsFeatured</td>

                    <td>
                        <a class="btn btn-info" asp-action="edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-danger delete-btn" asp-action="delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
                
               
            </tbody>
        </table>
    </div>
</div>